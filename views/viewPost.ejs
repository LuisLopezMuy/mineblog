<%- include("partials/navbar.ejs") %>


    <main class="container">

        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
            <h1 class="display-4 fst-italic fw-medium">
                <%= post.title %>
            </h1>
        </div>


        <div class="row g-5">
            <div class="col-md-8">

                <article class="blog-post">
                    <p class="blog-post-meta fst-italic">
                        <%= Intl.DateTimeFormat('es-Es',{dateStyle: "long" }).format(new Date(post.postDate)) %>
                    </p>


                    <p><%- post.content.replace(/\n/g, "<br>" ) %></p>
            </div>



            <div class="col-md-4">
                <div class="position-sticky" style="top: 2rem;">


                    <div class="p-4 mb-3 bg-body-tertiary rounded">
                        <h4 class="fst-italic">
                            <%= post.author %>
                        </h4>
                        <p class="mb-0">
                            <%= post.authorInfo %>
                        </p>
                    </div>

                    <div style="margin-top: 50px;">
                        <h4 class="fst-italic">Te puede interesar</h4>
                        <ul class="list-unstyled">


                            <% for( let i=0; i < 4; i++ ) { %>
                                <% const x=Math.floor(Math.random()*posts.length) %>

                                    <a href="/viewpost/<%= posts[x].slug %>"
                                        class="card border-light btn btn-light text-start">
                                        <div class="card-body">

                                            <h5 class="card-title">
                                                <%= posts[x].title %>
                                            </h5>
                                            <p class="card-text text-secondary">
                                                <%= posts[x].content.slice(0,85) + "..." %>
                                            </p>

                                        </div>
                                    </a>

                                    <% } %>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>





    <a href="/editpost/<%= post.slug %>" class="btn btn-primary btn-flt">

        <img src="/images/edit.png" alt="new post">

    </a>





    <%- include("partials/footer.ejs") %>