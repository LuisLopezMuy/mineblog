<%- include("partials/navbar.ejs") %>


<main class="container">

    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
      <div class="col-lg-12 px-0">
        <h1 class="display-4 fst-italic fw-medium"><%= posts[index].title %></h1>
        
      </div>
    </div>
     

    <div class="row g-5">
        <div class="col-md-8">

            <article class="blog-post">
                <p class="blog-post-meta fst-italic"><%= Intl.DateTimeFormat('es-Es',{dateStyle: "long"}).format(new Date(posts[index].postDate)) %></p>


                <p class="parrafo"><%- posts[index].content.replace(/\n/g, "<br>") %></p>
        </div>



        <div class="col-md-4">
            <div class="position-sticky" style="top: 2rem;">


                <div class="p-4 mb-3 bg-body-tertiary rounded">
                    <h4 class="fst-italic"><%= posts[index].author %></h4>
                    <p class="mb-0"><%= posts[index].authorInfo %></p>
                </div>

                <div style="margin-top: 50px;">
                    <h4 class="fst-italic">Te puede interesar</h4>
                    <ul class="list-unstyled">


                        <% for( let i = 0; i < 4; i++ ) { %>
                            <% const x = Math.floor(Math.random()*posts.length) %>

                            <a href="/viewpost/<%= posts[x].slug %>"
                                class="card border-light btn btn-light text-start">
                                <div class="card-body">
            
                                    <h5 class="card-title">
                                        <%= posts[x].title %>
                                    </h5>
                                    <p class="card-text text-secondary">
                                        <%= posts[x].content.slice(0,85) + "..." %>
                                    </p>
            
                                </div>
                            </a>

                        <% } %>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    </main>











    <%- include("partials/footer.ejs") %>